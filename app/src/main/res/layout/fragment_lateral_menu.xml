<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Base.ContainerWithoutPadding"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/Base.Wrapper.FullWidth.FullPadded"
        android:orientation="vertical" >

        <FrameLayout
            style="@style/Base.Wrapper"
            android:layout_gravity="center_horizontal" >

            <ImageView
                android:id="@+id/user_avatar"
                style="@style/Base.Wrapper"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <ProgressBar
                android:id="@+id/user_avatar_loader"
                style="@style/Base.Wrapper"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/user_name"
            style="@style/Base.Wrapper"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/BaseTextAppearance.SmallText" />
    </LinearLayout>

    <ListView
        android:id="@+id/menu_list"
        style="@style/Base.ContainerLeftRightPadded"
        android:divider="@color/grey"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true" >
    </ListView>

</LinearLayout>