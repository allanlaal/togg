<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Base.Container"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/small_padding"
    android:paddingLeft="@dimen/small_padding"
    android:paddingRight="@dimen/small_padding"
    android:paddingTop="@dimen/small_padding" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/medium_size"
        android:layout_height="@dimen/medium_size"
        android:scaleType="center" />

    <TextView
        android:id="@+id/text"
        style="@style/Base.Wrapper.FullWidth"
        android:layout_marginLeft="@dimen/text_separation"
        android:textAppearance="@style/BaseTextAppearance.SmallText" />

</LinearLayout>